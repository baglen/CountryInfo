<Page x:Class="CountryInfo.Pages.ChangeConnectionStringPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CountryInfo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangeConnectionStringPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <TextBox Name="txtBoxDataSource"></TextBox>
        </StackPanel>
        <Button Content="Применить" Name="btnApply" Click="btnApply_Click"></Button>
        <Button Content="Conn" Name="btnShowConnectionString" Click="btnShowConnectionString_Click" HorizontalAlignment="Right"></Button>
    </Grid>
</Page>
